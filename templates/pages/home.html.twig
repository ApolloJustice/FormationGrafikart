{% extends 'base.html.twig' %}

{% block title 'Ma Super Agence' %}

{% block body %}
<div class="jumbptron text-center">
    <div class="container">
        <h1>Ma Super Agence</h1>
        <p>
            Une agence encore mieux que Stephane Plaza Immobilier.
        </p>
    </div>
</div>

<div class="container">
    <h2>Les derniers biens</h2>
    <div class="row flex">
        {% for property in properties %}
        <div class="col-3">
            <div class="card">
                {% if property.filename %}
                    <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="card-img-top" style="width: 100%; height:auto;">
                {% else %}
                    <img src="/images/properties/empty.png" alt="card-img-top" style="width: 100%; height:auto;">
                {% endif %}
                <div class="card-body">
                    <h5 class="title">
                        <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                    </h5>
                    <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                    <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.getFormattedPrice }} â‚¬</div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
